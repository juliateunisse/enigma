alfabet = "abcdefghijklmnopqrstuvwxyz"
rotorA = alfabet
rotorB = alfabet
rotorC = alfabet

print(alfabet.index("o"))
print(rotorA.index("o"))

def encrypt(letter):
  idx = alfabet.index(letter)
  newLetter = rotorA[idx]
  print(newLetter)

tekst = input("Welke tekst wil je encrypten?\n")

for letter in tekst:
  encrypt(letter)
